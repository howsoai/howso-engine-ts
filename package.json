{
  "name": "@howso/engine",
  "version": "0.0.0",
  "type": "module",
  "license": "AGPL-3.0-only",
  "author": {
    "name": "Howso Incorporated"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "rimraf ./lib",
    "build": "tsc --build",
    "lint": "tsc --noEmit && eslint 'src/**'",
    "lint:fix": "eslint --fix 'src/**'",
    "prepack": "npm run build",
    "test": "tsc --noEmit"
  },
  "files": [
    "LICENSE.txt",
    "README.md",
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@howso/amalgam-lang": "^54.3.17",
    "@howso/openapi-client": "^2.0.1",
    "@microsoft/fetch-event-source": "^2.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/emscripten": "^1.39.10",
    "@types/node": "^18.15.2",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.1",
    "typescript": "^5.5.3",
    "vite": "^5.1.6",
    "vite-plugin-eslint": "^1.8.1"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": [
            "class",
            "interface"
          ],
          "format": [
            "PascalCase"
          ]
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "lib/**"
    ],
    "env": {
      "browser": true,
      "es2020": true
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "printWidth": 120
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie > 0"
  ]
}
